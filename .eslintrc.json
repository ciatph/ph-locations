{
  "extends": [
    "eslint:recommended",
    "airbnb-base",
    "plugin:mocha/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "plugins": [
    "mocha"
  ],
  "root": true,
  "rules": {
    "class-methods-use-this": 0,
    "func-names": 0,
    "import/extensions": 0,
    "mocha/no-hooks-for-single-case": 0,
    "mocha/no-mocha-arrows": 0
  },
  "env": {
    "mocha": true
  }
}